pipeline {
     agent any

     options {
          skipStagesAfterUnstable()
          skipDefaultCheckout(true)
     }

     environment {
        DIR = './CA2/Part2/gradle-migration'
     }

     stages {
        stage('Repository Checkout') {
               steps {
                    echo 'Repository Checkout'
                    checkout scm
               }
        }

        stage('Build Step') {
               steps {
                    echo 'Generating deployment file'
                    echo "Running Build ${env.BUILD_ID}"

                    script {
                        if (isUnix()) {
                              sh '${DIR}/gradlew clean build'
                        } else {
                              bat '${DIR}/gradlew clean build'
                        }
                    }

                    archiveArtifacts artifacts: 'build/libs/*.jar'
               }
        }

        stage('Unit Tests') {
               steps {
                    echo 'Unit Tests'

                    script {
                         if (isUnix()) {
                              sh '${DIR}/gradlew test'
                    } else {
                              bat '${DIR}/gradlew test'
                         }
                    }
               }
        }

     }
}